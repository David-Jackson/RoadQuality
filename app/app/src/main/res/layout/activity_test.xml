<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fyi.jackson.drew.roadquality.ActivityTest">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_margin="16dp"
        android:src="@drawable/ic_play_arrow"/>

    <RelativeLayout
        android:id="@+id/fab_reveal"
        android:background="@color/colorAccent"
        android:visibility="invisible"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/fab_reveal_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/avd_play_to_pause_96dp"
            android:contentDescription="@string/content_desc_fab_reveal" />
    </RelativeLayout>

